<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- DownloadLog -->
  <Style Selector="TextBlock.DownloadLog">
    <Setter Property="Background" Value="{DynamicResource DownloadLogTextBlockBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource DownloadLogTextBlockForeground}"/>

    <Setter Property="Height" Value="123"/>
    <Setter Property="Width" Value="465"/>

    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>

    <Setter Property="Padding" Value="1 0 0 0"/>

    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
  </Style>
</Styles>
